<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- fontawesome cdn -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css"
        integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />
    <!-- bootstrap css-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <!-- css -->
    <link rel="stylesheet" href="/css/styles.css">
    <title>Employee</title>
</head>

<body>
    <section class="py-5">
        <div class="container">
            <div class="info-content">
                <a href="/" class="btn fw-bold">Home</a>
            </div>
            <div class=" text-center mb-0">
                <h2 class="position-relative d-inline-block">
                    Employee Details
                </h2>
            </div>
            <div class="container mt-3">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Employee Id</th>
                            <th>Employee Name</th>
                            <th>Employee Address</th>
                            <th>Employee Salary</th>
                            <th>Employee Role</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody id="box">
                        <% employees.forEach((employee)=> { %>
                            <tr>
                                <td>
                                    <%=employee.employee_number %>
                                </td>
                                <td>
                                    <%=employee.first_name %>
                                        <%=employee.last_name %>
                                </td>
                                <td>
                                    <%=employee.address %>, <%=employee.city %>, <%=employee.country %>
                                </td>
                                <td>
                                    <%=employee.salary %>
                                </td>
                                <td>
                                    <%=employee.role %>
                                </td>
                                <td><a href="/updateEmployee?id=<%= employee.employee_number %>">Update</a></td>
                                <td><a href="/deleteEmployee?id=<%= employee.employee_number %>"
                                        onclick="return confirm('Are you sure you want to delete?')">Delete</a></td>
                            </tr>
                            <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>

</html>